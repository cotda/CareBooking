<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp">

        <!-- Logo Section -->
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_blue_round"
                android:padding="22dp"
                android:src="@drawable/ic_calendar_white"
                android:elevation="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MediCare Booking"
                android:textSize="24sp"
                android:textColor="#1E40AF"
                android:textStyle="bold"
                android:paddingTop="12dp"
                android:letterSpacing="0.02"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đặt lịch khám bệnh dễ dàng"
                android:textSize="14sp"
                android:textColor="#64748B"
                android:paddingTop="4dp"/>
        </LinearLayout>

        <!-- Welcome Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chào mừng trở lại!"
            android:textSize="28sp"
            android:textColor="#0F172A"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#64748B"
            android:layout_marginBottom="32dp"/>

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email hoặc số điện thoại"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhập email hoặc số điện thoại"
            android:textColorHint="#94A3B8"
            android:background="@drawable/input_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:textColor="#0F172A"
            android:layout_marginBottom="20dp"
            android:inputType="textEmailAddress"/>

        <!-- Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập mật khẩu"
                android:textColorHint="#94A3B8"
                android:paddingStart="16dp"
                android:paddingEnd="52dp"
                android:textSize="15sp"
                android:textColor="#0F172A"
                android:inputType="textPassword"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/btnShowPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:alpha="0.6"/>
        </RelativeLayout>

        <!-- Remember + Forgot -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <CheckBox
                android:id="@+id/rememberMe"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ghi nhớ đăng nhập"
                android:textSize="14sp"
                android:textColor="#475569"/>

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quên mật khẩu?"
                android:textSize="14sp"
                android:textColor="#2563EB"
                android:textStyle="bold"
                android:gravity="end"/>
        </LinearLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đăng nhập"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="24dp"/>

        <!-- Divider -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E2E8F0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hoặc đăng nhập với"
                android:textSize="13sp"
                android:textColor="#64748B"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#E2E8F0"/>
        </LinearLayout>

        <!-- Sign Up Link -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có tài khoản? "
                android:textSize="15sp"
                android:textColor="#64748B"/>

            <TextView
                android:id="@+id/goToSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng ký ngay"
                android:textSize="15sp"
                android:textColor="#2563EB"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>