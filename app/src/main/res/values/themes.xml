<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme Light -->
    <style name="Theme.CareBooking" parent="Theme.Material3.Light.NoActionBar">

        <!-- Màu thương hiệu chính -->
        <item name="colorPrimary">@color/blue_600</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Màu nền -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/gray_900</item>

        <!-- Màu Accent -->
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/blue_700</item>
        <item name="android:navigationBarColor">@color/white</item>

        <!-- Tắt action bar cũ -->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- Hiệu ứng ripple -->
        <item name="android:colorControlHighlight">@color/blue_100</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>

    <!-- Tab Text Style -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>
