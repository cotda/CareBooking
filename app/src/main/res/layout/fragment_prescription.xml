<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Patient & Doctor Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã bệnh nhân"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvPatientId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BN001234"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đã hoàn thành"
                        android:textSize="11sp"
                        app:chipBackgroundColor="@color/green_100"
                        app:chipStrokeWidth="0dp"
                        android:textColor="@color/green_700" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_200"
                    android:layout_marginBottom="12dp" />

                <!-- Date & Time Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày khám"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10/11/2024"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Giờ khám"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14:30"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Doctor & Department Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bác sĩ"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDoctorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BS. Nguyễn Văn A"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900" />

                        <TextView
                            android:id="@+id/tvDoctorSpecialty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tim mạch"
                            android:textSize="11sp"
                            android:textColor="@color/gray_500" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khoa"
                            android:textSize="12sp"
                            android:textColor="@color/gray_500"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Khoa Tim mạch"
                            android:textSize="14sp"
                            android:textColor="@color/gray_900" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Hospital -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cơ sở khám"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tvHospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bệnh viện Đại học Y"
                        android:textSize="14sp"
                        android:textColor="@color/gray_900" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Prescriptions Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Header with Icon -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <View
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_icon_green"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đơn thuốc"
                        android:textSize="16sp"
                        android:textColor="@color/gray_900"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- RecyclerView cho danh sách thuốc -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvPrescriptions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_prescription" />

                <!-- Warning Note -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_warning_note"
                    android:padding="12dp"
                    android:layout_marginTop="16dp"
                    android:gravity="start">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_alert_circle"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="2dp"
                        app:tint="@color/yellow_600" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lưu ý quan trọng:"
                            android:textSize="13sp"
                            android:textColor="@color/yellow_800"
                            android:textStyle="bold"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Uống thuốc đúng giờ, đủ liều. Không tự ý thay đổi liều lượng hoặc ngưng thuốc khi chưa có chỉ định của bác sĩ."
                            android:textSize="12sp"
                            android:textColor="@color/yellow_800" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
