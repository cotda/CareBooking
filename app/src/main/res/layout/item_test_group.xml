<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="18dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Test Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTestName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xét nghiệm máu tổng quát"
                    android:textColor="#111827"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTestDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="10/11/2024"
                    android:textColor="#6B7280"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvTestStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_status_normal"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Đã có kết quả"
                android:textColor="#047857"
                android:textSize="11sp" />
        </RelativeLayout>

        <!-- Test Items Container -->
        <LinearLayout
            android:id="@+id/testItemsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Items will be added dynamically -->
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
