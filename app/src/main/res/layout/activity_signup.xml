<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFC"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="28dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:padding="10dp"
                android:background="@drawable/bg_white_round"
                android:src="@drawable/ic_arrow_left"
                android:elevation="2dp"
                app:tint="#1E293B" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/bg_blue_round"
                android:padding="14dp"
                android:src="@drawable/ic_calendar_white"
                android:elevation="3dp"/>
        </LinearLayout>

        <!-- Title Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản mới"
            android:textSize="28sp"
            android:textColor="#0F172A"
            android:textStyle="bold"
            android:layout_marginBottom="6dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký để bắt đầu đặt lịch khám bệnh"
            android:textSize="15sp"
            android:textColor="#64748B"
            android:layout_marginBottom="28dp"/>

        <!-- Full Name Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/fullNameInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhập họ và tên đầy đủ"
            android:textColorHint="#94A3B8"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:textColor="#0F172A"
            android:background="@drawable/input_bg"
            android:inputType="textPersonName|textCapWords"
            android:layout_marginBottom="18dp"/>

        <!-- Phone Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/phoneInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhập số điện thoại"
            android:textColorHint="#94A3B8"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:textColor="#0F172A"
            android:inputType="phone"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="18dp"/>

        <!-- Email Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/emailInput"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Nhập địa chỉ email"
            android:textColorHint="#94A3B8"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="15sp"
            android:textColor="#0F172A"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="18dp"/>

        <!-- Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="18dp">

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tạo mật khẩu (ít nhất 8 ký tự)"
                android:textColorHint="#94A3B8"
                android:paddingStart="16dp"
                android:paddingEnd="52dp"
                android:textSize="15sp"
                android:textColor="#0F172A"
                android:inputType="textPassword"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/btnShowPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:alpha="0.6"/>
        </RelativeLayout>

        <!-- Confirm Password Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu"
            android:textSize="14sp"
            android:textColor="#1E293B"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/input_bg"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/confirmPasswordInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập lại mật khẩu"
                android:textColorHint="#94A3B8"
                android:paddingStart="16dp"
                android:paddingEnd="52dp"
                android:textSize="15sp"
                android:textColor="#0F172A"
                android:inputType="textPassword"
                android:background="@android:color/transparent"/>

            <ImageView
                android:id="@+id/btnShowConfirmPassword"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_eye"
                android:alpha="0.6"/>
        </RelativeLayout>

        <!-- Terms and Conditions -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="16dp"
            android:elevation="1dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/termsCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="DuplicateIds" />

                    <TextView
                        android:id="@+id/textTerms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="#475569"
                        android:paddingStart="8dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Sign Up Button -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Đăng ký"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"
            android:elevation="2dp"
            android:stateListAnimator="@null"
            android:layout_marginBottom="24dp"/>

        <!-- Login Link -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã có tài khoản? "
                android:textSize="15sp"
                android:textColor="#64748B"/>

            <TextView
                android:id="@+id/loginLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đăng nhập"
                android:textSize="15sp"
                android:textColor="#2563EB"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>