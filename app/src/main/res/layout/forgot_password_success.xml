<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/forgot_password_success.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="@color/white">

    <!-- Header with Back Button -->
    <ImageButton
        android:id="@+id/btnBackFromSuccess"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_left"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/back"
        android:scaleType="centerInside"
        android:layout_marginBottom="32dp" />

    <!-- Success Content (Centered) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <!-- Success Icon Circle -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal">

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_green_circle">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_circle"
                    android:contentDescription="@string/success"
                    app:tint="@color/green_600" />
            </FrameLayout>
        </FrameLayout>

        <!-- Success Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/check_your_email"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E293B"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Success Message -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reset_instructions_sent"
            android:textSize="14sp"
            android:textColor="#4B5563"
            android:layout_marginBottom="8dp"
            android:gravity="center" />

        <!-- Email Address -->
        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="user@example.com"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2563EB"
            android:layout_marginBottom="24dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp">

        <!-- Primary Button - Back to Login -->
        <Button
            android:id="@+id/btnBackToLoginSuccess"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/back_to_login"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/btn_primary"
            android:textColor="@color/white"
            android:layout_marginBottom="12dp" />

        <!-- Secondary Button - Resend Email -->
        <Button
            android:id="@+id/btnResendEmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/resend_email"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2563EB" />
    </LinearLayout>

    <!-- Help Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_email_received"
        android:textSize="12sp"
        android:textColor="#4B5563"
        android:gravity="center" />

</LinearLayout>